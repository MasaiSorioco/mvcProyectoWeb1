@model mvcProyectoWeb1.Models.Producto

@{
    ViewData["Title"] = "Detalle Producto";
}
<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light">
            <div class="col-12">
                <h1 class="text-primary text-center">@Model.Nombre</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Volver atrás</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <!-- Enlace de WhatsApp para reservar el producto -->
                    <a href="https://wa.me/59165945424?text=¡Hola Computer! Me gustaría reservar el producto @Model.Nombre" class="btn btn-success btn-sm">Reservar vía WhatsApp</a>
                </div>
                <@* div class="col-12 col-md-6 pb-1">
                    <!-- Enlace de WhatsApp para reservar el producto -->
                    <a href="https://wa.me/59165945424?text=%C2%A1Hola%21%20Me%20gustar%C3%ADa%20reservar%20el%20producto%20@Model.Nombre" class="btn btn-success btn-sm">Reservar vía WhatsApp</a>
                </div> *@

            </div>
        </div>
    </div>
</div>
